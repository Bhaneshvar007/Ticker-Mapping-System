<div ng-app="myApp" ng-controller="SecurityMaster">
    <div>
        <form>
            <div class="row m-3 p-3 border rounder">
                <h5 class="col-md-12 mb-3">Upload Security Master</h5>

                <div class="form-group col-md-3">
                    <label>From Date</label>
                    <input ng-model="UPLOAD_FROM_DATE" id="UPLOAD_FROM_DATE" data-date-format="DD/MM/YYYY" type="date" class="form-control" />
                </div>
                @*<div class="form-group col-md-3">
                        <label>TO Date</label>
                        <input ng-model="UPLOAD_FROM_DATE" id="UPLOAD_To_DATE" data-date-format="DD/MM/YYYY" type="date" class="form-control" />
                    </div>*@
                <span> &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp;&nbsp; </span>
                <div class="form-row mt-4">
                    <div class="form-group col-md-12">
                        <div class="custom-file">
                            <input type="file" ngf-select ng-model="xlFile" id="xlFile" name="xlFile" style="padding-bottom: 25px; padding-top: 10px;" multiple="multiple" ;ngf-select="getUploadFiles($files)" />
                            <label class="custom-file-label" style="width: 210px;margin-top: 9px;" for="xlFile" >Choose file</label>
                        </div>
                        <h6 id="selected-file" style="margin-top: 10px;"><!-- Slected file will get here --></h6>
                    </div>
                </div>
                <div class="form-group col-md-2">
                    <button type="button" class="btn btn-primary mb-2 btnPosition" ng-click="getUploadFile(UPLOAD_FROM_DATE,xlFile)">
                        <span ng-show="searchButtonText == 'Searching'">
                            @*<img style="width:20px;height:20px;" src="~/images/loader.gif" />*@
                        </span>
                        Upload
                    </button>
                </div>
            </div>


            <div class="row">


            </div>
        </form>
    </div>




</div>
<script>
    $(document).ready(function () {
     
        $('input[type="file"]').change(function (e) {
            var fileUpload = $(this).get(0);
            var files = fileUpload.files;

            var data = new FormData();
            for (var i = 0; i < files.length; i++) {
                data.append(files[i].name, files[i]);
            }
            //data.append("folder", "SecurityMaster");
            $.ajax({
                // url: "/fileupload.ashx",
                url: "/SecurityMaster/Upload",
                type: "POST",
                data: data,
                contentType: false,
                processData: false,
                success: function (result) {
                    var geekss = e.target.files[0].name;
                    $("#selected-file").text(geekss + ' is the selected file.');
                    //$("h6").text(geekss + ' is the selected file.');
                    //alert(result);
                },
                /*error: function (err) {
                    alert(err.statusText)*/
                error: function (xhr, status, error) {
                    console.log("Status: " + status);
                    console.log("Error: " + error);
                    console.log("Response: " + xhr.responseText);
                    alert("Upload failed: " + xhr.responseText);
                }
            });

        });


    });
</script>







